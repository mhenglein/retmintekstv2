<%- include("header") -%>
<body class="text-center">
  <style>
    .btn-circle {
      width: 58px;
      height: 58px;
      /* padding: 10px 16px; */
      border-radius: 100%;
      font-size: 20px;
      line-height: 1.33;
      margin-bottom: 5px;
      margin-left: 5px;
    }

    .search-field-rounded {
      height: 60px;
      width: 660px;
      padding: 2px 30px 0;
      line-height: 60px;
      -webkit-box-shadow: inset 0 8px 10px -5px #dce4ea;
      -moz-box-shadow: inset 0 8px 10px -5px #dce4ea;
      box-shadow: inset 0 8px 10px -5px #dce4ea;
      -webkit-border-radius: 40px;
      -moz-border-radius: 40px;
      border-radius: 40px;
      outline: 0;
      background-color: #fff;
      border: 1px solid;
      border-color: rgba(105, 129, 135, 0.4);
      color: #0ea389;
      display: inline-block;
    }
    #main {
      margin-top: 50px;
    }

    #search {
      margin-top: 100px;
    }

    .ordklasse {
      margin-top: 50px;
      border: 1px solid rgba(105, 129, 135, 0.4);
      width: 660px;
      height: 40vh;
    }
  </style>
  <div class="container" id="main">
    <div class="row">
      <h1 class="lead">RetMinTekst | Lykkebarometer</h1>
    </div>
    <div class="row">
      <div class="col text-center" id="search">
        <form action="" method="post">
          <input class="search-field-rounded form-control" type="text" name="checkWord" id="checkWord" />

          <button class="btn btn-success btn-circle" type="submit">
            <i class="fas fa-search"></i>
          </button>
        </form>
      </div>
    </div>
    <!-- row -->
    <div class="row">
      <div class="mx-auto container ordklasse"><%= ordKlasse %></div>
    </div>
    <!-- row -->
  </div>
  <!-- container -->
</body>
<%- include("footer") -%>
